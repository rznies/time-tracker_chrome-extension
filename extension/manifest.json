{
  "manifest_version": 3,
  "name": "Saved Knowledge Chat",
  "version": "1.0.0",
  "description": "Save text snippets from webpages and chat with your knowledge using AI-grounded responses",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/selection-listener.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  
  "action": {
    "default_title": "Open Knowledge Vault"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
